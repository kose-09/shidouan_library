<!DOCTYPE html>
<html>
  <head>
    <title>指導案ライブラリ</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/478e0028e7.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <% if user_signed_in? %>
      <li>
        <%= link_to "About", about_path %>
      </li>
      <li>
        <%= link_to "投稿一覧", posts_path %>
      </li>
      <li>
        <%= link_to "マイページ", user_path(current_user.id) %>
      </li>
      <li>
        <%= link_to "新規投稿", new_post_path %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      </li>
    <% elsif admin_signed_in? %>
      <li>
        <%= link_to "投稿一覧", admin_posts_path %>
      </li>
      <li>
        <%= link_to "教科一覧", admin_subject_categories_path %>
      </li>
      <li>
        <%= link_to "ユーザー一覧", admin_users_path %>
      </li>
      <li>
        <%= link_to "コメント一覧", admin_post_comments_path %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
      </li>
    <% else %>
      <li>
        <%= link_to "About", about_path %>
      </li>
      <li>
        <%= link_to "投稿一覧", posts_path %>
      </li>
      <li>
        <%= link_to "新規登録", new_user_registration_path %>
      </li>
      <li>
        <%= link_to "ログイン", new_user_session_path %>
      </li>
      <li>
        <%= link_to "ゲストログイン（閲覧用）", users_guest_sign_in_path, method: :post %>
      </li>
    <% end %>
    </header>
    <div>
      <%= flash[:notice] %>
    </div>
    <%= yield %>
  </body>
</html>
