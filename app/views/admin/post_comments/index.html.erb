<h1>コメント一覧</h1>

<table>
  <thead>
    <tr>
      <th>投稿</th>
      <th>ユーザー</th>
      <th>コメント</th>
    </tr>
  </thead>
  <tbody>
    <% @post_comments.each do |post_comment| %>
    <tr>
      <td>
        <%= link_to admin_post_path(post_comment.post) do %>
          <%= post_comment.post.title %>
        <% end %>
      </td>
      <td>
        <%= link_to admin_user_path(post_comment.user) do %> 
          <%= post_comment.user.name %>
        <% end %> 
      </td>
      <td><%= post_comment.comment %></td>
      <td><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= link_to "削除", admin_post_comment_path(post_comment), method: :delete, data: {confirm: "本当に削除しますか？"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>