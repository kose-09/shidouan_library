<h1>コメント一覧</h1>

<table>
  <thead>
    <tr>
      <th>投稿タイトル</th>
      <th>コメントユーザー</th>
      <th>コメント</th>
    </tr>
  </thead>
  <tbody>
    <% @post_comments.each do |post_comment| %>
    <tr>
      <td>
        <%= link_to admin_post_path(post_comment.post) do %>
          <%= post_comment.post.title %>
        <% end %>
      </td>
      <td><%= post_comment.user.name %></td>
      <td><%= post_comment.comment %></td>
      <td><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <% end %>
  </tbody>
</table>