<div class="container-fluid">
  <div class="row">
    <div class="mt-3 ml-5">
      <h2>コメント一覧</h2>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto">
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>投稿</th>
            <th>ユーザー</th>
            <th style="width: 600px">コメント</th>
            <th>投稿日</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @post_comments.each do |post_comment| %>
          <tr>
            <td><%= post_comment.id %></td>
            <td>
              <%= link_to admin_post_path(post_comment.post) do %>
                <%= post_comment.post.title %>
              <% end %>
            </td>
            <td>
              <%= link_to admin_user_path(post_comment.user) do %> 
                <%= post_comment.user.name %>
              <% end %> 
            </td>
            <td><%= post_comment.comment %></td>
            <td><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= link_to "削除", admin_post_comment_path(post_comment), method: :delete, data: {confirm: "本当に削除しますか？"}, class: 'btn btn-danger' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @post_comments %>
    </div>
  </div>
</div>



