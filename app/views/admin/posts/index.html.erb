<h1>投稿一覧</h1>

<table>
  <thead>
    <tr>
      <th>教科</th>
      <th>題材名</th>
      <th>投稿者</th>
      <th>投稿日</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.subject_category.name %></td>
      <td>
        <%= link_to admin_post_path(post.id) do %>
          <%= post.title %>
        <% end %>
      </td>
      <td>
        <%= link_to admin_user_path(post.user) do %>
          <%= post.user.name %>
        <% end %>
      </td>
      <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= post.favorites.count %>いいね</td>
      <td>
        <%= link_to post_comments_admin_post_path(post.id) do %>
          <%= post.post_comments.count %>コメント
        <% end %>
      </td>
      <td>
        <%= link_to "削除", admin_post_path(post.id), method: :delete, data: {confirm: "本当に削除しますか？"} %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>