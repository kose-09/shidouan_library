<div class="container-fluid">
  <div class="row">
    <div class="mt-3 ml-5">
      <h2>投稿詳細</h2>
    </div>
  </div>
  <div class="row mb-5">
    <div class="mx-auto">
      <div class="row">
        <table class="table border">
          <tbody>
            <tr>
              <th>題材名</th>
              <td><%= @post.title %></td>
            </tr>
            <tr>
              <th>教科</th>
              <td><%= @post.subject_category.name %></td>
            </tr>
            <tr>
              <th>投稿ユーザー</th>
              <td>
                <%= link_to admin_user_path(@post.user) do %>
                  <%= @post.user.name %>
                <% end %>
              </td>
            </tr>
            <tr>
              <th>投稿日</th>
              <td><%= @post.created_at.strftime("%Y/%m/%d") %></td>
            </tr>
            <tr>
              <th></th>
              <td>
                <embed src="<%= polymorphic_url(@post.shidouan_pdf) %>" width="800" height="800" type="application/pdf"></embed>
              </td>
            </tr>
            <tr>
              <th>説明文</th>
              <td><%= @post.caption %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-2">
          <%= link_to "削除", post_path(@post.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class: 'btn btn-danger' %>
        </div>
        <div class="offset-6 col-2">
          <p>
            <%= @post.favorites.count %>いいね
          </p>
        </div>
        <div class="col-2">
          <p>
            <%= link_to post_comments_admin_post_path(@post.id) do %>
              <%= @post.post_comments.count %>コメント
            <% end %>
          </p>
        </div>
      </div>
      
    </div>
  </div>
</div>



