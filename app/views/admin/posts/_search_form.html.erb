<div class="mb-3">
  <i class="fa-solid fa-magnifying-glass"></i>絞り込み検索
</div>
<%= form_with url: search_admin_posts_path, local: true, method: :get do |f| %>
  <div class="form-group">
    <label>カテゴリー</label><br>
    <%= f.collection_select :subject_category_id, SubjectCategory.all, :id, :name, { prompt: 'カテゴリーを選択' } %><br>
  </div>
  <div class="form-group">
    <label>キーワード</label><br>
    <%= f.text_field :keyword, placeholder: "キーワードを入力", size: 25 %><br>
  </div>
  <%= f.submit "検索" %>
<% end %> 