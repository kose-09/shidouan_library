<div class="mb-3">
  <i class="fa-solid fa-magnifying-glass"></i>絞り込み検索
</div>
<%= form_with url: search_admin_posts_path, local: true, method: :get do |f| %>
  <div class="form-group">
    <label>教科</label><br>
    <%= f.collection_select :subject_category_id, SubjectCategory.all, :id, :name, { prompt: '教科を選択' }, class: "form-control" %><br>
  </div>
  <div class="form-group">
    <label>キーワード</label><br>
    <%= f.text_field :keyword, placeholder: "キーワードを入力", class: "form-control" %><br>
  </div>
  <%= f.submit "検索" %>
<% end %>