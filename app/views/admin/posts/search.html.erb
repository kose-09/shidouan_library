<div class="container-fluid">
  <div class="row m-2">
    <div class="col-2 border p-3">
      <%= render 'search_form' %> 
    </div>
    <div class="col-9 offset-1">
      <h5>検索結果一覧</h5>
      <%= link_to "新しい順", search_admin_posts_path(latest: "true") %>
      <%= link_to "古い順", search_admin_posts_path(old: "true") %>
      <%= render 'list', posts: @posts %>
      <%= paginate @posts %>
    </div>
  </div>
</div>