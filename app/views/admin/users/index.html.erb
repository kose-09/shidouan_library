<div class="container-fluid">
  <div class="row">
    <div class="mt-3 ml-5">
      <h2>ユーザー一覧</h2>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto">
      <table class="table">
        <thead>
          <tr>
            <th>ユーザーID</th>
            <th>ユーザーネーム</th>
            <th>メールアドレス</th>
            <th>登録日</th>
            <th>ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td>
              <%= link_to admin_user_path(user) do %>
                <%= user.name %>
              <% end %>
            </td>
            <td><%= user.email %></td>
            <td><%= user.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= user.is_active %></td>
            <td><%= link_to "編集", edit_admin_user_path(user), class: 'btn btn-success' %></td>
          </tr>
          <% end %> 
        </tbody>
      </table>
    </div>
  </div>
</div>







