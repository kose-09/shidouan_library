<h1>ユーザー情報編集</h1>

<%= form_with model: [:admin, @user] do |f| %>
  <label for="InputName">ユーザーネーム</label><br>
  <%= f.text_field :name, autofocus: true, id:"InputName" %><br>
  <label for="InputEmail">メールアドレス</label><br>
  <%= f.text_field :email %><br>
  <label for="SelectStatus">ステータス</label><br>
  <%= f.radio_button :is_active, :true %>
  <%= f.label :is_active, "有効", {value: :true} %>
  <%= f.radio_button :is_active, :false %>
  <%= f.label :is_active, "退会", {value: :false} %><br>
  <%= f.submit "変更を保存" %>
<% end %> 
