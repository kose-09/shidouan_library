<div class="container-fluid">
  <div class="row">
    <div class="mt-3 ml-5">
      <h2>ユーザー情報編集</h2>
    </div>
  </div>
  <div class="row">
    <div class="ml-5">
      <% if @user.errors.any? %>
        <h2><%= @user.errors.count %>件のエラーが発生しました</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto">
      <%= form_with model: [:admin, @user] do |f| %>
        <div class="form-group">
          <label for="InputName">ユーザーネーム</label><br>
          <%= f.text_field :name, autofocus: true, id:"InputName", size: 40 %><br>
        </div>
        <div class="form-group">
          <label for="InputEmail">メールアドレス</label><br>
          <%= f.text_field :email, size: 40 %><br>
        </div>
        <div class="form-group">
          <label for="SelectStatus">ステータス</label><br>
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "有効", {value: :true} %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "退会", {value: :false} %><br>
        </div>
        <%= f.submit "変更を保存", class: 'btn btn-primary' %>
      <% end %> 
    </div>
  </div>
</div>




