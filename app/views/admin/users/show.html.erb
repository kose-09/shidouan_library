<div class="container-fluid">
  <div class="row">
    <div class="col-3 mt-3">
      <table class="table">
        <tr>
          <td>
            <%= image_tag @user.get_profile_image(200,200) %>
          </td>
        </tr>
        <tr>
          <td>
            <ユーザーネーム><br>
            <%= @user.name %>
          </td>
        </tr>
        <tr>
          <td>
            <自己紹介><br>
            <%= @user.introduction %>
          </td>
        </tr>
        <tr>
          <td><%= link_to "編集", edit_admin_user_path(@user), class: 'btn btn-success' %></td>
        </tr>
      </table>
      <div class="mt-5">
        <P><%= link_to "いいねした投稿", my_favorites_user_path(@user), class: 'btn btn-secondary btn-block' %></P>
      </div>
    </div>

    <div class="offset-1 col-8 mt-3">
      <h4>投稿一覧</h4>
      <%= render '/admin/posts/list', posts: @posts %>
      <%= paginate @posts %>
    </div>
  </div>
</div>





