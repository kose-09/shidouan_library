<div class="container-fluid">
  <div class="row">
    <div class="mt-3 ml-5">
      <h2>教科編集</h2>
    </div>
  </div>
  <div class="row">
    <div class="ml-5">
      <% if @subject_category.errors.any? %>
        <h2><%= @subject_category.errors.count %>件のエラーが発生しました</h2>
        <ul>
          <% @subject_category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto">
      <%= form_with model: [:admin, @subject_category] do |f| %>
        <div class="form-group">
          <label for="InputSubject">教科名</label><br>
          <%= f.text_field :name, size: 30 %><br>
        </div>
        <%= f.submit "変更を保存", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>


