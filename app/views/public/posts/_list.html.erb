<table class="table">
  <thead>
    <tr>
      <th>教科</th>
      <th>題材名</th>
      <th>投稿者</th>
      <th>投稿日</th>
      <th>いいね</th>
      <th>コメント</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
    <tr>
      <td><%= post.subject_category.name %></td>
      <td>
        <%= link_to post_path(post) do %>
          <%= post.title %>
        <% end %>
      </td>
      <td>
        <%= link_to user_path(post.user) do %>
          <%= post.user.name %>
        <% end %>
      </td>
      <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= post.favorites.count %>いいね</td>
      <td>
        <%= link_to post_post_comments_path(post) do %>
          <%= post.post_comments.count %>コメント
        <% end %>
      </td>
      <td>
        <% if post.user == current_user %>
          <%= link_to "編集", edit_post_path(post), class: 'btn btn-success' %>
          <%= link_to "削除", post_path(post), method: :delete, data: {confirm: "本当に削除しますか？"}, class: 'btn btn-danger' %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>