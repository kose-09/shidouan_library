<h1>投稿一覧</h1>

<%= form_with url: search_posts_path, local: true, method: :get do |form| %>
  <%= form.collection_select :subject_category_id, SubjectCategory.all, :id, :name, { prompt: 'カテゴリーを選択' } %><br>
  <%= form.text_field :keyword, placeholder: "キーワードを入力" %>
  <%= form.submit "検索" %>
<% end %>

<%= render 'list', posts: @posts %>