<div class="container-fluid">
  <div class="row">
    <div class="mt-3 ml-5">
      <h2>新規投稿</h2>
    </div>
  </div>
  <div class="row">
    <div class="ml-5">
      <%= render 'error_message', post: @post %> 
    </div>
  </div>
  <div class="row">
    <div class="mx-auto">
      <%= form_with model: @post do |f| %>
        <div class="form-group">
          <label for="InputSubject">教科</label><br>
          <%= f.collection_select :subject_category_id, SubjectCategory.all, :id, :name, { prompt: '選択してください' }  %><br>
        </div>
        <div class="form-group">
          <label for="InputTitle">題材名</label><br>
          <%= f.text_field :title, autofocus: true, id:"InputTitle", placeholder:"題材名", size: 70 %><br>
        </div>
        <div class="form-group">
          <label for="InputPdf">指導案PDF</label><br>
          <%= f.file_field :shidouan_pdf, placeholder:"指導案のPDFファイル", accept: "application/pdf" %><br>
        </div>
        <div class="form-group">
          <label for="InputCaption">説明文</label><br>
          <%= f.text_area :caption, placeholder:"見てほしいところ、工夫した点など", size: "70x10" %><br>
        </div>
        <%= f.submit "投稿する", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>





