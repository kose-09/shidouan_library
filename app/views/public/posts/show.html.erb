<div class="container-fluid">
  <div class="row">
    <div class="mt-3 ml-5">
      <h2>投稿詳細</h2>
    </div>
  </div>
  <div class="row mb-5">
    <div class="mx-auto">
      <div class="row">
        <table class="table border">
          <tbody>
            <tr>
              <th>題材名</th>
              <td><%= @post.title %></td>
            </tr>
            <tr>
              <th>教科</th>
              <td><%= @post.subject_category.name %></td>
            </tr>
            <tr>
              <th>投稿ユーザー</th>
              <td>
                <%= link_to user_path(@post.user) do %>
                  <%= @post.user.name %>
                <% end %>
              </td>
            </tr>
            <tr>
              <th>投稿日</th>
              <td><%= @post.created_at.strftime("%Y/%m/%d") %></td>
            </tr>
            <tr>
              <th></th>
              <td>
                <embed src="<%= polymorphic_url(@post.shidouan_pdf) %>" width="800" height="800" type="application/pdf"></embed>
              </td>
            </tr>
            <tr>
              <th>説明文</th>
              <td><%= @post.caption %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="row">
        <% if @post.user == current_user %>
          <div class="col-2">
            <%= link_to "編集", edit_post_path(@post.id), class: 'btn btn-success' %>
          </div>
          <div class="col-2">
            <%= link_to "削除", post_path(@post.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class: 'btn btn-danger' %>
          </div>
          <div class="offset-4 col-2">
            <%= render 'favorite', post: @post %> 
          </div>
          <div class="col-2">
            <p>
              <%= link_to post_post_comments_path(@post.id) do %>
                <%= @post.post_comments.count %>コメント
              <% end %>
            </p>
          </div>
        <% else %>
          <div class="offset-8 col-2">
            <%= render 'favorite', post: @post %> 
          </div>
          <div class="col-2">
            <p>
              <%= link_to post_post_comments_path(@post.id) do %>
                <%= @post.post_comments.count %>コメント
              <% end %>
            </p>
          </div>
        <% end %>
      </div>
      <div class="row mt-5">
        <div class="mx-auto">
          <%= form_with model: [@post, @post_comment] do |f| %>
            <%= f.text_area :comment, rows:'5', placeholder: "コメントを入力", size: '70x10' %><br>
            <%= f.submit "投稿する", class: 'btn btn-secondary' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>






