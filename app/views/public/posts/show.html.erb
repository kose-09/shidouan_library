<div class="container-fluid">
  <div class="row mt-3 ml-5">
    <h2>投稿詳細</h2>
  </div>
  <div class="row">
    <div class="my-1 mx-auto">
      <table class="table border">
        <tbody>
          <tr>
            <th>題材名</th>
            <td><%= @post.title %></td>
            <td></td>
          </tr>
          <tr>
            <th>投稿ユーザー</th>
            <td>
              <%= link_to user_path(@post.user) do %>
                <%= @post.user.name %>
              <% end %>
            </td>
            <td></td>
          </tr>
          <tr>
            <th>投稿日</th>
            <td><%= @post.created_at.strftime('%Y/%m/%d') %></td>
            <td></td>
          </tr>
          <tr>
            <th></th>
            <td>
              <embed src="<%= polymorphic_url(@post.shidouan_pdf) %>" width="900" height="900" type="application/pdf"></embed>
            </td>
            <td></td>
          </tr>
          <tr>
            <th>説明文</th>
            <td><%= @post.caption %></td>
            <td></td>
          </tr>
          <tr>
            <% if @post.user == current_user %>
              <td><%= link_to "編集", edit_post_path(@post.id) %></td>
              <td><%= link_to "削除", post_path(@post.id), method: :delete, data: {confirm: "本当に削除しますか？"} %></td>
              <td></td>
            <% end %>
          </tr>
          <tr>
            <th></th>
            <td align="right">
              <% if current_user.present? %>
                <% if @post.favorited_by?(current_user) %>
                <p>
                  <%= link_to post_favorite_path(@post.id), method: :delete do %>
                    ♥<%= @post.favorites.count %>いいね
                  <% end %>
                </p>
                <% else %>
                <p>
                  <%= link_to post_favorite_path(@post.id), method: :post do %>
                    ♡<%= @post.favorites.count %>いいね
                  <% end %>
                </p>
                <% end %>
              <% else %>
                <%= @post.favorites.count %>いいね
              <% end %>  
            </td>
            <td align="right">
              <div>
                <p>
                  <%= link_to post_post_comments_path(@post.id) do %>
                    <%= @post.post_comments.count %>コメント
                  <% end %>
                </p>
              </div>
            </td>
          </tr>
          <tr>
            <th></th>
            <td>
              <div>
                <%= form_with model: [@post, @post_comment] do |f| %>
                  <%= f.text_area :comment, rows:'5', placeholder: "コメントを入力", size: '70x10' %><br>
                  <%= f.submit "投稿する", class: 'btn btn-secondary' %>
                <% end %>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>









