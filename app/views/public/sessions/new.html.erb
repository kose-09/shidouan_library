<div class="container-fluid">
  <div class="row mt-3 ml-5">
    <h2>ログイン</h2>
  </div>
  <div class="row">
    <div class="mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field mb-3">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 40 %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password", size: 40 %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mt-1">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログイン状態を保持する" %>
          </div>
        <% end %>

        <div class="actions mt-3">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto mt-5">
      <p>
        登録がお済みでない方は<%= render "public/shared/links" %>から登録してください。
      </p>
    </div>
  </div>
</div>




