<h1>プロフィール編集</h1>

<% if @user.errors.any? %>
  <h2><%= @user.errors.count %>件のエラーが発生しました</h2>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
  <label for="InputName">ユーザーネーム</label><br>
  <%= f.text_field :name, autofocus: true, id:"InputName", placeholder:"名前" %><br>
  <label for="InputIntroduction">自己紹介</label><br>
  <%= f.text_area :introduction, id:"InputIntroduction", placeholder:"自己紹介文" %><br>
  <label for="InputImage">プロフィール画像</label><br>
  <%= f.file_field :profile_image, placeholder:"プロフィール画像", accept: "image/*" %><br>
  <%= f.submit "変更を保存" %>
<% end %>